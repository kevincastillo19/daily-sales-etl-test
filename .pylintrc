[MASTER]
ignore=venv
jobs=1
load-plugins=
persistent=yes

[MESSAGES CONTROL]
disable=
    C0114,  # missing-module-docstring
    C0115,  # missing-class-docstring
    C0116,  # missing-function-docstring

[REPORTS]
output-format=colorized
reports=no
score=yes

[BASIC]
good-names=i,j,k,ex,Run,_

[FORMAT]
max-line-length=100
indent-string='    '

[DESIGN]
max-args=5
max-locals=15
max-returns=6
max-branches=12
max-statements=50
max-parents=7
max-attributes=10

[TYPECHECK]
ignore-mixin-members=yes

[LOGGING]
logging-modules=logging

[IMPORTS]
known-standard-library=abc,os,sys
known-third-party=numpy,pandas,requests

[SIMILARITIES]
min-similarity-lines=4